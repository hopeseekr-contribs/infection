#!/usr/bin/env php
<?php

set_error_handler(function($errno, $errstr) {
    $backtrace = [];
    foreach(debug_backtrace() as $trace) {
        $backtrace[] = [
            'file' => $trace['file'] ?? '',
            'line' => $trace['line'] ?? ''
        ];
    }

    var_dump($errno, $errstr, $backtrace);
}, E_ALL);

require __DIR__ . '/infection';
